/**app.wxss**/
/* 公共样式表 */
text{
    font-family: "微软雅黑"；   
}
page{
    font-size: 35rpx;
    color: #333;
    font-family: "微软雅黑";
}
.container{
    background: #eee;
}
.left{
    float: left;
}
.right{
    float: right;
}
.clearfix::after{
    content: '';
    display:block;
    clear:both;
}
.col999{
    color: #999;
}
.col666{
    color: #666;
}

/* 产品list样式 */
#productsBox{
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
#products .product{
    background: #fff;
    padding: 20rpx;
    width: 47%;
    box-sizing: border-box;
    margin: 10rpx 10rpx;
}
#products image{
    width: 100%;
    height: 300rpx;
}
#products .title{
    display: block;
    font-size: 25rpx;
    overflow: hidden;
    line-height: 40rpx;
    height: 80rpx;
    pad: 10rpx 0;
    margin: 10rpx 0;
}
#products .left{
    color: red;
    line-height: 40rpx;
}
#products .right{
    font-size: 25rpx;
    line-height: 40rpx;
}