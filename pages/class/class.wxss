/* pages/class/class.wxss */

page{
    height: 100%;
}
.container{
    height: 100%;
}
/* 搜索栏 */
#searchBox{
    height: 8%;
    border-radius: 5rpx;
    box-sizing: border-box;
    padding-top: 20rpx;
    text-align: center;
}
#searchBox input{
    background: #fff;
    text-align: center;
    font-size: 30rpx;
    width: 95%;
    margin: 0 auto;
}
.productNav{
    height: 92%;
    background: #fff;
}
/* 左侧导航 */
.leftList{
    width: 30%;
    height: 100%;
}
.leftList .active{
    background:#325596;
    color: #fff;
}
.leftList view{
    border-bottom: 1rpx solid #ddd;
    border-right: 1rpx solid #ddd;
    text-align: center;
    padding: 25rpx 0;
    font-size: 30rpx;
    color: #666666;
}

.rigthList{
     height: 100%;
    width: 70%;
}

/* 右侧导航 */
.listInfoBox{
    margin-bottom: 30rpx;
}
.listInfo{
    display: flex;
    text-align: center;
    justify-content: flex-start;
    flex-wrap: wrap;  
    
}
.listInfoBox .title{
    line-height: 40rpx;
    font-size: 30rpx;
    color: #666;
    padding-left: 20rpx;
}
.listInfoBox  .right{
    line-height: 40rpx;
    font-size: 25rpx;
    color: #999;
    padding-right: 20rpx;
}
.listInfo .children{
    margin: 20rpx 0;
    width: 33%;
}
.listInfo image{
    width: 80rpx;
    height: 80rpx;
}
.listInfo text{
    display: block;
    font-size: 25rpx;
    margin: 10rpx 0;
    color: #666;
}