/* pages/index/noPos/noPos.wxss */
page{
    height: 100%;
}
.container{
    height: 100%;
}

/* 导航 */

#nav{
    background: #fff;
    white-space: nowrap;
    height: 8%;
}
.navList {
    font-size: 30rpx;
    color: #2e2e2e;
    margin: 30rpx 30rpx 10rpx 20rpx;
    padding-bottom: 5rpx;
    display: inline-block;
}

#nav .active {
    color: #364a89;
    border-bottom: 5rpx solid #364a89;
}

/* 产品列表 */
#products{
    height: 92%;
    /* padding-top: 30rpx; */
}
#productsBox{
    width: 97%;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
#products .product{
    background: #fff;
    padding: 20rpx;
    width: 47%;
    box-sizing: border-box;
    margin: 10rpx 10rpx;
}
#products image{
    width: 100%;
    height: 300rpx;
}
#products .title{
    display: block;
    font-size: 30rpx;
    overflow: hidden;
    line-height: 40rpx;
    height: 80rpx;
    pad: 10rpx 0;
}
#products .left{
    color: red;
    line-height: 40rpx;
}
#products .right{
    font-size: 25rpx;
    line-height: 40rpx;
}