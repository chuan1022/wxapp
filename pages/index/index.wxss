/**index.wxss**/

/* 结构 */
page{
    height: 100%;
}
.container{
    height: 100%;
}
#topNav {
    background: #fff;
    white-space: nowrap;
    height: 8%;
}
#main{
    /* height: 600rpx; */
    height:92%;
}


/* 导航栏 */
.navList {
    font-size: 30rpx;
    color: #2e2e2e;
    margin: 30rpx 30rpx 10rpx 20rpx;
    padding-bottom: 5rpx;
    display: inline-block;
}

#topNav .active {
    color: #364a89;
    border-bottom: 5rpx solid #364a89;
}

.scroll {
    white-space: nowrap;
}

/* banner */

.bannerImg {
    height: 350rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

/* 活动栏 */

.activesBox {
    background: #fff;
}

.actives {
    background: #fff;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    width: 720rpx;
    margin: 0 auto;
}

.activeItem {
    width: 160rpx;
    margin: 20rpx 10rpx;
    text-align: center;
}

.activeItem image {
    width: 90rpx;
    height: 90rpx;
}

.activeItem text {
    font-size: 30rpx;
    display: block;
    color: #656565;
}

/* 推荐 */

#recommend .recomItem {
    background: #fff;
    margin: 20rpx 0;
    padding-bottom: 25rpx;
}

#recommend .recomItem image {
    width: 100%;
}

#recommend .proName {
    font-size: 30rpx;
    color: #656565;
    font-family: "微软雅黑";
    padding: 0 20rpx;
    line-height: 40rpx;
    display: block;
    margin: 10rpx 0;
}

#recommend .price {
    font-size: 30rpx;
    color: red;
    margin: 0 20rpx;
}

#recommend .sellNum {
    color: #656565;
    font-size: 30rpx;
}

#recommend button {
    font-size: 30rpx;
    display: inline-block;
    float: right;
    color: #fff;
    background: #364a89;
    line-height: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}
